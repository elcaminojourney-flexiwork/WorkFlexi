{
  "name": "flexiwork-pwa",
  "description": "FlexiWork - Workforce Operating System PWA",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "build": "expo export --platform web",
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "web:build": "expo export --platform web",
    "web:build:production": "cross-env NODE_ENV=production expo export --platform web",
    "copy:pwa": "node ./scripts/copy-pwa-assets.js",
    "build:pwa": "npm run web:build:production && npm run copy:pwa",
    "build:hostinger": "npx expo export --platform web && npm run prepare:hostinger",
    "prepare:hostinger": "node ./scripts/prepare-hostinger.js",
    "deploy:full": "npm install && npx expo export --platform web && npm run prepare:hostinger",
    "generate:icons": "node ./scripts/generate-pwa-icons.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "jest && npm run test:integration",
    "maestro:install": "powershell -ExecutionPolicy Bypass -File ./scripts/install-maestro.ps1",
    "maestro:test": "maestro test maestro/tests/",
    "lint": "expo lint"
  },
  "dependencies": {
    "@expo/config-plugins": "^54.0.4",
    "@expo/vector-icons": "^15.0.3",
    "@isaacs/brace-expansion": "^5.0.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@supabase/supabase-js": "^2.87.1",
    "expo": "^54.0.32",
    "expo-blur": "~15.0.8",
    "expo-build-properties": "^1.0.10",
    "expo-constants": "~18.0.12",
    "expo-document-picker": "~14.0.8",
    "expo-font": "~14.0.11",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-image-picker": "~17.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.10",
    "expo-router": "~6.0.22",
    "expo-splash-screen": "^31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-symbols": "~1.0.8",
    "expo-system-ui": "~6.0.9",
    "expo-web-browser": "~15.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1",
    "react-native-worklets-core": "^1.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.1.10",
    "babel-preset-expo": "^54.0.10",
    "cross-env": "^10.1.0",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "jest": "^29.2.1",
    "jest-expo": "~54.0.16",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
